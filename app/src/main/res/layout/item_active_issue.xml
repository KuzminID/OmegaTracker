<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rv_item_active_issue"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/item_active_issue_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_medium"
        android:text="@string/app_name"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:layout_margin="@dimen/content_margin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/item_issue_b_show_full"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="25dp"
        android:background="@color/white"
        android:src="@drawable/item_active_issue_arrow"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/item_active_issue_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="12dp"
        android:layout_marginHorizontal="@dimen/content_margin"
        android:src="@drawable/item_active_issue_icon"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/item_active_issue_time" />

    <TextView
        android:id="@+id/item_active_issue_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginStart="@dimen/content_margin"
        android:layout_marginVertical="8dp"
        android:fontFamily="@font/rubik_regular"
        android:textColor="@color/black"
        app:layout_constraintLeft_toRightOf="@id/item_active_issue_icon"
        app:layout_constraintTop_toBottomOf="@id/item_active_issue_time" />

</androidx.constraintlayout.widget.ConstraintLayout>
